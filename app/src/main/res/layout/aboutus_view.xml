<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_companyName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_style_aboutUs_companyName" />

                <TextView
                    android:id="@+id/tv_aliss_name"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_ch_address"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:textColor="@color/phone_color"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_area_address"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_postcode"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_telephone"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:textColor="@color/phone_color"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_fax"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:textColor="@color/phone_color"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_email"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text_style_details" />
                <TextView
                    android:id="@+id/tv_webUrl"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:textColor="@color/phone_color"
                    android:layout_marginBottom="15dp"
                    style="@style/text_style_details" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>