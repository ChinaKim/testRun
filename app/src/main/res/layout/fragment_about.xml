<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_about_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginRight="-0.6dp"
            android:layout_marginLeft="-0.6dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_about_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/lin_about_brief"
                layout="@layout/item_about_lin" />

            <View style="@style/lin_view" android:layout_marginLeft="@dimen/marginTopNext"/>

            <include
                android:id="@+id/lin_about_culture"
                layout="@layout/item_about_lin" />

            <View style="@style/lin_view" android:layout_marginLeft="@dimen/marginTopNext"/>

            <include
                android:id="@+id/lin_about_net"
                layout="@layout/item_about_lin" />

            <View style="@style/lin_view" android:layout_marginLeft="@dimen/marginTopNext"/>

            <include
                android:id="@+id/lin_about_certificate"
                layout="@layout/item_about_lin" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="-0.6dp"
            android:layout_marginLeft="-0.6dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_about_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/lin_about_craft"
                layout="@layout/item_about_lin" />

            <View style="@style/lin_view" android:layout_marginLeft="@dimen/marginTopNext"/>

            <include
                android:id="@+id/lin_about_us"
                layout="@layout/item_about_lin" />

            <View style="@style/lin_view" android:layout_marginLeft="@dimen/marginTopNext"/>

            <include
                android:id="@+id/lin_about_email"
                layout="@layout/item_about_lin" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>