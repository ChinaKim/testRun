<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhongli.main.zhonglitenghui.custom.PagerSlidingTabStrip
        android:background="@color/actionbar_bg_color"
        android:id="@+id/pager_case_tab"
        style="@style/page_order_item"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsDividerPadding="10dp"
        app:pstsIndicatorColor="@color/actionbar_txt_color"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_case_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>