<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_case_view"
    android:orientation="vertical"
    android:padding="@dimen/marginpadding"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_case_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/text_size_m"
        android:padding="@dimen/marginTopNext"
        style="@style/text_style_main"
        android:background="@color/actionbar_bg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_case_title" />
</LinearLayout>